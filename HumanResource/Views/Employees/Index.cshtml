@model IEnumerable<HumanResource.Models.Employee>
@{
    ViewData["Title"] = "Employee Statistics";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title">Employees Information</h4>
                </div>
            </div>
            <div class="card-body collapse show">
                <div class="card-block card-dashboard">

                    <div class="row">
                        @*<div class="col-sm-12 col-md-3">
                            <div class="dataTables_length" id="DataTables_Table_0_length">
                                <label>
                                    Show
                                    <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-control form-control-sm">
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">
                                            100
                                        </option>
                                    </select>
                                </label>
                            </div>
                        </div>*@
                        @*<div class="col-lg-1"></div>*@
                        @*<div class="col-sm-12 col-md-3">
                            <div id="DataTables_Table_0_filter"
                                 class="dataTables_filter">
                                <label>
                                    Search:<input type="search"
                                                  class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
                                </label>
                            </div>
                        </div>*@
                        @*<div class="col-lg-1"></div>*@
                        <div class="col-lg-3">
                            <button id="addRow" class="btn btn-primary mb-2">
                                <i class="ft-plus"></i>&nbsp;
                                <a asp-action="AddEmployee" asp-controller="Employees">  Add new Employee</a>
                            </button>
                        </div>
                    </div>
                    <hr />
                    <table class="table table-striped table-bordered zero-configuration" id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Type</th>
                                <th>Contract date</th>
                                <th>Salary</th>
                                <th>Nationality</th>
                                <th>Edit</th>
                                <th>Delete</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.EmployeeType</td>
                                    <td>@item.DateOfContract.Date.ToString("d")</td>
                                    <td>@item.Salary </td>
                                    <td>@item.Nationality</td>
                                    <td>
                                        <a asp-action="EditEmployee" asp-controller="Employees" asp-route-ssn="@item.SSN"  class="btn btn-primary">
                                            <i class="icon-note"></i>Edit</a>
                                        
                                    </td>
                                    <td>
                                        <form method="post" asp-action="DeleteEmpoyee" asp-controller="Employees" asp-route-ssn="@item.SSN">
                                            <span id="ConfirmDeleteSpan_@item.SSN" style="display:none">
                                                <span>Are You sure You want to Delete</span>
                                                <button type="submit" class="btn btn-danger mb-2">Yes</button>
                                                <a href="#" class="btn btn-primary mb-2" onclick="ConfirmDelete('@item.SSN',false)">No</a>
                                            </span>
                                            <span id="DeleteSpan_@item.SSN">
                                                <a href="#" class="btn btn-danger" onclick="ConfirmDelete('@item.SSN',true)">Delete</a>
                                            </span>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
