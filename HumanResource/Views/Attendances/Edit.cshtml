@model HumanResource.ViewModel.AttendanceEmployeeViewModel

@{
    ViewData["Title"] = "Edit Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title">Request A Form</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">
                    <form class="form form-horizontal" method="post" asp-action="Edit">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Attendance.Id" />
                        <div class="form-body">
                            <div class="form-group row">
                                <label class="col-md-3 label-control">Employee Name : </label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(x => x.Attendance.EmployeeSSN, new SelectList(Model.Employees, "SSN", "Name"), new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control">Date: </label>
                                <div class="col-md-9">
                                    <div class="position-relative has-icon-left">
                                        <input asp-for="Attendance.Date" class="form-control">
                                        <div class="form-control-position">
                                            <i class="ft-message-square"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class=" row">
                            <div class="col-md-12">
                                <div class=" row form-group">
                                    <label class="col-md-3 label-control">Start time: </label>
                                    <div class="position-relative has-icon-left col-lg-9">
                                        <input asp-for="Attendance.StartTime" class="form-control">
                                        <div class="form-control-position">
                                            <i class="ft-clock"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class=" row form-group">
                                    <label class="col-md-3 label-control">End time: </label>
                                    <div class="position-relative has-icon-left col-lg-9">
                                        <input asp-for="Attendance.EndTime" class="form-control">
                                        <div class="form-control-position">
                                            <i class="ft-clock"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-actions">
                            <a asp-action="Index" asp-controller="Attendances" class="btn btn-danger mr-1">
                                <i class="icon-trash"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="icon-note"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
