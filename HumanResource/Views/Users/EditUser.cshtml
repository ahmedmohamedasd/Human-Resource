@model HumanResource.ViewModel.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title">Edit user </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">
                    <form class="form form-horizontal" asp-action="AddUser">
                        <div asp-validation-summary="All" class="text-danger"></div>


                        <div class="form-group row">
                            <input type="hidden" asp-for="@Model.UserId" />
                            <label asp-for="@Model.UserName" class="col-md-3 label-control"></label>
                            <div class="col-md-9">
                                <input asp-for="@Model.UserName" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="@Model.Email" class="col-md-3 label-control"></label>
                            <div class="col-md-9">
                                <input asp-for="@Model.Email" class="form-control" />

                            </div>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                                      
                                        

                        <div class="form-group row">
                            <label class="col-md-3 label-control">Group Name </label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(c => c.RoleId, new SelectList(Model.Roles, "Id", "Name"), new { @class = "form-control" })

                            </div>
                            <span asp-validation-for="@Model.RoleId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" asp-route-UserId="@Model.UserId" value="Update" class="btn btn-primary" />
                            <a class="btn btn-danger" asp-action="Index" asp-controller="Users">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>


        </div>
    </div>
</div>
 


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

