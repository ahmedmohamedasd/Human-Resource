@model HumanResource.ViewModel.AllRolesViewModel

@{
    ViewData["Title"] = "TestUser";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title">Add user </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">
                    <form class="form form-horizontal" asp-action="AddUser">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                      
                        <div class="form-group row">
                            <label asp-for="@Model.registerViewModel.UserName" class="col-md-3 label-control"></label>
                            <div class="col-md-9">
                                <input asp-for="@Model.registerViewModel.UserName" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.registerViewModel.UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="@Model.registerViewModel.Email" class="col-md-3 label-control"></label>
                            <div class="col-md-9">
                                <input asp-for="@Model.registerViewModel.Email" class="form-control" />

                            </div>
                            <span asp-validation-for="@Model.registerViewModel.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="@Model.registerViewModel.Password" class="col-md-3 label-control"></label>
                            <div class="col-md-9">
                                <input asp-for="@Model.registerViewModel.Password" class="form-control" />

                            </div>
                            <span asp-validation-for="@Model.registerViewModel.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="@Model.registerViewModel.ConfirmPassword" class="col-md-3 label-control"></label>
                            <div class="col-md-9">
                                <input asp-for="@Model.registerViewModel.ConfirmPassword" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.registerViewModel.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 label-control">Group Name </label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(c => c.registerViewModel.RoleId, new SelectList(Model.allRoles, "Id", "Name"), new { @class = "form-control" })

                            </div>
                            <span asp-validation-for="@Model.registerViewModel.RoleId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add" class="btn btn-primary" />
                            <a class="btn btn-danger" asp-action="Index" asp-controller="Users">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>


        </div>
    </div>
</div>
   


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

