@model IEnumerable<HumanResource.Models.OfficialVacations>

@{
    ViewData["Title"] = "OficialVacations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title">Official Vacations</h4>
                </div>
            </div>
            <div class="card-body collapse show">
                <div class="card-block card-dashboard">
                    <p class="card-text">
                        DataTables has most features enabled by default,
                        so all you need to do to use it with your own ables is to call the construction
                    </p>

                    <div class="row">
                        <div class="col-sm-12 col-md-3">
                            <div class="dataTables_length" id="DataTables_Table_0_length">
                                <label>
                                    Show Date
                                    <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-control form-control-sm">
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">
                                            100
                                        </option>
                                    </select>
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-1"></div>
                        <div class="col-sm-12 col-md-5">
                            <div id="DataTables_Table_0_filter"
                                 class="dataTables_filter">
                                <label>
                                    Vacation :<input type="search"
                                                          class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <button id="addRow" class="btn btn-primary mb-2">
                                <i class="ft-plus"></i>&nbsp;
                                <a asp-action="AddVacation" asp-controller="GeneralSetting">  Add Official Vacation</a>
                            </button>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered zero-configuration mt-40">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Date.ToString("d")</td>
                                    <td>
                                        <a asp-action="EditVacation" asp-controller="GeneralSetting" asp-route-Id="@item.Id" class="btn btn-primary mr-1">
                                            <i class="icon-note"></i> Edit
                                        </a>
                                    </td>
                                    <td>
                                        <form method="post" asp-action="DeleteVacation" asp-controller="GeneralSetting" asp-route-id="@item.Id">
                                            <span id="ConfirmDeleteSpan_@item.Id" style="display:none">
                                                <span>Are You sure You want to Delete</span>
                                                <button type="submit" class="btn btn-danger mb-2">Yes</button>
                                                <a href="#" class="btn btn-primary mb-2" onclick="ConfirmDelete('@item.Id',false)">No</a>
                                            </span>
                                            <span id="DeleteSpan_@item.Id">
                                                <a href="#" class="btn btn-danger" onclick="ConfirmDelete('@item.Id',true)">Delete</a>
                                            </span>


                                        </form>
                                    </td>

                                </tr>
                            }




                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>